<h2>ChatRoom： <strong><%= @partner.name %></strong> and you(<%= current_user.name %>)</h2>

<% # created_at順にソート %>
<% @chats = @chats.sort { |a, b| 
  a.created_at <=> b.created_at
} %>

<div class="container p-0 bg-light rounded-lg border border-dark" style="max-width: 540px;">
  <div class="p-2 overflow-auto" style="height: 480px;">
    <% @chats.each do |chat| %>
      <% if chat.user_id == current_user.id %>
        <div class="my-1 d-flex justify-content-end">
          <span class="bg-success text-light px-2 rounded-lg border border-dark"><%= chat.message %></span>
          <span><%= link_to "del", chat_path(chat), method: :delete, class: "btn btn-danger btn-sm ml-2", data: { confirm: '本当に消しますか？' } %></span>
        </div>
      <% else %>
        <div class="my-1 d-flex justify-content-start">
          <span class="bg-primary text-light px-2 rounded-lg border border-dark"><%= chat.message %></span>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="d-flex justify-content-end p-2 bg-dark">
    <%= form_with model: @chat do |f| %>
      <%= f.text_field :message %> 
      <%= f.submit "send", class: "btn-sm btn-info" %>
      <%= f.hidden_field :room_id, :value => @room.id %>
    <% end %>
  </div>
</div>
