<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorite_path(book), method: :delete, class: "text-danger", remote: true do %>
    💗<%= book.favorites.count %>いいね
  <% end %>
<% else %>
  <%= link_to book_favorite_path(book), method: :post, class: "text-primary", remote: true do %>
    💙<%= book.favorites.count %>いいね
  <% end %>
<% end %>