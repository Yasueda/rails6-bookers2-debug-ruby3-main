<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Star</th>
      <th>Good</th>
      <th>Comment</th>
      <th>View</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td><%= render 'books/static_star', book: book %></td>
        <td class="favorite-<%= book.id %>" ><%= render 'favorites/favorite', book: book %></td>
        <td><%= book.book_comments.count %></td>
        <td><%= book.show_counts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>